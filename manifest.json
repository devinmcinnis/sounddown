{
    "manifest_version": 2,
    "name":    "SoundDown",
    "version": "1.0",
    "offline_enabled": false,

    "background": {
      "persistent": true,
      "scripts": ["background.js"]
    },

    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },

    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon128.png"
    },

    "permissions": [
      "tabs",
      "webRequest",
      "*://*/*"
    ]
}
